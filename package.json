{
  "name": "homey.dingz",
  "version": "1.1.3",
  "description": "Control dingz devices",
  "engines": {
    "node": ">=12.16.1"
  },
  "main": "app.js",
  "scripts": {
    "inst:myHomey": "npm install github:cgHome/homey.my-homey",
    "predebug$": "sudo rm -rf .homeybuild",
    "debug": "homey app run",
    "debug:remote": "npm run debug -- --remote",
    "eslint": "eslint --ext .js --ignore-path .gitignore .",
    "eslint:fix": "npm run eslint -- --fix",
    "start": "npm install && homey app install",
    "build": "homey app build",
    "publish": "homey app publish",
    "postpublish": "git commit --amend --no-edit ./package.json && git push -f origin main",
    "validate": "homey app validate -l publish",
    "validateTest": "homey app validate"
  },
  "keywords": [
    "Smarthome",
    "homey",
    "app",
    "Dingz",
    "org.cflat-inc.dingz"
  ],
  "author": "Chris Gross <cghome@cflat-inc.org>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cgHome/homey.dingz.git"
  },
  "bugs": {
    "url": "https://github.com/cgHome/homey.dingz/issues"
  },
  "homepage": "https://homey.app/a/org.cflat-inc.dingz",
  "dependencies": {
    "my-homey": "github:cgHome/homey.my-homey",
    "simplelog-api": "github:cghome/homey.simplelog-api"
  },
  "devDependencies": {
    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.4",
    "eslint": "^8.36.0",
    "eslint-config-athom": "^3.1.1"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
