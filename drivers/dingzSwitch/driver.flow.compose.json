{
  "triggers": [
    {
      "id": "dingzButton_pressed",
      "title": {
        "en": "Button is pressed",
        "de": "Taster ist gedrückt"
      },
      "$filter": "capabilities=dingz_button",
      "titleFormatted": {
        "en": "Button [[button]] is [[action]]",
        "de": "Taster [[button]] ist [[action]]"
      },
      "args": [
        {
          "name": "button",
          "type": "autocomplete"
        },
        {
          "name": "action",
          "type": "dropdown",
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Short Press",
                "de": "Kurz gedrückt"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Double Press",
                "de": "2x Kurz gedrückt"
              }
            },
            {
              "id": "3",
              "label": {
                "en": "Long Press",
                "de": "Lange gedrückt"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "lightState_changed",
      "title": {
        "en": "Light state changed",
        "de": "Lichtstatus geändert"
      },
      "$filter": "capabilities=light_state",
      "titleFormatted": {
        "en": "Light state changed to [[lightState]]",
        "de": "Lichtstatus geändert auf [[lightState]]"
      },
      "args": [
        {
          "name": "lightState",
          "type": "dropdown",
          "values": [
            {
              "id": "night",
              "label": {
                "en": "Night",
                "de": "Nacht"
              }
            },
            {
              "id": "twilight",
              "label": {
                "en": "Twilight",
                "de": "Dämmerung"
              }
            },
            {
              "id": "day",
              "label": {
                "en": "Day",
                "de": "Tag"
              }
            }
          ]
        }
      ]
    }
  ],
  "conditions": [
    {
      "id": "is_lightState",
      "title": {
        "en": "Light state is !{{|not}}",
        "de": "Lichtstatus ist !{{|nicht}}"
      },
      "$filter": "capabilities=light_state",
      "titleFormatted": {
        "en": "Light state is !{{|not}} [[lightState]]",
        "de": "Lichtstatus ist !{{|nicht}} [[lightState]]"
      },
      "hint": {
        "en": "Checks the current light condition",
        "de": "Prüft den aktuellen Lichtstatus"
      },
      "args": [
        {
          "name": "lightState",
          "type": "dropdown",
          "values": [
            {
              "id": "night",
              "label": {
                "en": "Night",
                "de": "Nacht"
              }
            },
            {
              "id": "twilight",
              "label": {
                "en": "Twilight",
                "de": "Dämmerung"
              }
            },
            {
              "id": "day",
              "label": {
                "en": "Day",
                "de": "Tag"
              }
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "ramp",
      "title": {
        "en": "Fade dimmer",
        "de": "Fade dimmer"
      },
      "$filter": "capabilities=ramp",
      "titleFormatted": {
        "en": "Dim light to [[dim]] in [[ramp]]sec",
        "de": "Licht dimmen auf [[dim]] in [[ramp]]Sek"
      },
      "hint": {
        "en": "Use this card to dim the light and the duration for dimming in seconds.",
        "de": "Verwenden Sie diese Karte, um das Licht zu dimmen und die Dauer für das Dimmen in Sekunden."
      },
      "args": [
        {
          "name": "dim",
          "type": "range",
          "min": 0,
          "max": 1,
          "step": 0.01,
          "value": 0.5,
          "label": "%",
          "labelMultiplier": 100,
          "labelDecimals": 0
        },
        {
          "name": "ramp",
          "type": "range",
          "min": 0,
          "max": 25,
          "step": 1,
          "labelMultiplier": 1,
          "labelDecimals": 0
        }
      ]
    },
    {
      "id": "windowcoverings_tilt_set",
      "title": {
        "en": "Adjust the lamellas",
        "de": "Stellen Sie die Lamellen ein"
      },
      "$filter": "capabilities=windowcoverings_tilt_set",
      "titleFormatted": {
        "en": "Set the lamella to [[value]]",
        "de": "Stellen Sie die Lamellen auf [[value]]"
      },
      "hint": {
        "en": "Change the position to open (100%), closed (0%), or a value in between.",
        "de": "Ändern Sie die Position auf offen (100 %), geschlossen (0 %) oder einen Wert dazwischen."
      },
      "args": [
        {
          "type": "range",
          "name": "value",
          "min": 0,
          "max": 1,
          "step": 0.01,
          "label": "%",
          "labelMultiplier": 100,
          "labelDecimals": 0
        }
      ]
    },
    {
      "id": "dingzLedColor_set",
      "title": {
        "en": "dingzLED color",
        "de": "dingzLED Farbe"
      },
      "$filter": "capabilities=light_hue,light_saturation",
      "titleFormatted": {
        "en": "Set a color to [[color]]",
        "de": "Die Farbe auf [[color]] setzen"
      },
      "hint": {
        "en": "Use this card to set a color of the LED on the dingz front.",
        "de": "Verwenden Sie diese Karte, um eine Farbe der LED auf der dingz Front zu setzen."
      },
      "args": [
        {
          "name": "color",
          "type": "dropdown",
          "values": [
            {
              "id": "{'light_hue': '0', 'saturation': '1'}",
              "label": {
                "en": "Read",
                "de": "Rot"
              }
            },
            {
              "id": "{'light_hue': '0.25', 'saturation': '1'}",
              "label": {
                "en": "Green",
                "de": "Grün"
              }
            },
            {
              "id": "{'light_hue': '0.53', 'saturation': '1'}",
              "label": {
                "en": "Blue",
                "de": "Blau"
              }
            },
            {
              "id": "{'light_hue': '0', 'saturation' : '0'}",
              "label": {
                "en": "White",
                "de": "Weiss"
              }
            }
          ]
        }
      ]
    }
  ]
}